{
  "name": "air-quality-analyzer-backend",
  "version": "1.0.0",
  "description": "Air Quality Analytics Platform is a backend service that imports environmental data from Excel files into a database and provides an API for extracting analytical insights from the stored information.",
  "main": "app.ts",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "yarn run build && cp ./src/swagger/swagger.yml ./build/swagger/swagger.yml&& node -r ./build/app.js",
    "start-dev": "npx nodemon",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier . --write",
    "prepare": "husky",
    "check-types": "tsc --pretty --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "seed": "ts-node --project tsconfig.json --require tsconfig-paths/register src/scripts/seed.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.8",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "3.5.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.25.0"
  },
  "dependencies": {
    "@types/jest": "^29.5.14",
    "@types/yamljs": "^0.2.34",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "mongoose": "^8.12.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.6",
    "yamljs": "^0.3.0",
    "zod": "^3.24.2"
  }
}
